<action id="24" name="Change Color" category="Actor|Object">
    <text text="Make" />
    <radio name="color">
        <choice text="the actor" mute="true" >
            <actorInstance />
        </choice>
        <choice text="the object" mute="true">
            <objectInstance />
        </choice>
    </radio>
    <text text="turn" />
    <color name="newColor" />
    <radio name="turn">
        <choice text="permanently" />
        <choice text="flashing for" >
            <number min="0" max="600" />
            <text text="tenths of a second" />
        </choice>
    </radio>
</action>